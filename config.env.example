# AURA K8s - Environment Configuration Template
# Copy this file to .env or .env.local and customize for your environment

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_USER=aura
POSTGRES_PASSWORD=aura_password
POSTGRES_DB=aura_metrics
DATABASE_URL=postgresql://aura:aura_password@localhost:5432/aura_metrics

# Skip schema initialization (set to true if schema already exists)
SKIP_SCHEMA_INIT=false

# ============================================================================
# GRAFANA CONFIGURATION
# ============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ============================================================================
# SERVICE URLS
# ============================================================================
ML_SERVICE_URL=http://localhost:8001
MCP_SERVER_URL=http://localhost:8000
OLLAMA_URL=http://localhost:11434

# ============================================================================
# SERVICE PORTS
# ============================================================================
PORT=8001            # ML Service
MCP_PORT=8000        # MCP Server
METRICS_PORT=9090    # Collector
REMEDIATOR_PORT=9091 # Remediator

# ============================================================================
# ML CONFIGURATION
# ============================================================================
MODEL_PATH=ml/train/models
OLLAMA_MODEL=llama3.2
ML_RANDOM_SEED=42

# ============================================================================
# INTERVALS & TIMEOUTS
# ============================================================================
COLLECTION_INTERVAL=15s
PREDICTION_INTERVAL=30
REMEDIATION_INTERVAL=30s
CONFIDENCE_THRESHOLD=0.50
DRY_RUN=false

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info

# ============================================================================
# DATABASE POOL SETTINGS
# ============================================================================
MAX_DB_OPEN_CONNS=25
MAX_DB_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=30m
DB_CONN_MAX_IDLE_TIME=5m

