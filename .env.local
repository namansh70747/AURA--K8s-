# AURA K8s Local Environment Configuration
# Copy this to .env and adjust values as needed

# Database Configuration (TimescaleDB in Docker)
DATABASE_URL=postgresql://aura:aura_password@localhost:5432/aura_metrics?sslmode=disable
POSTGRES_USER=aura
POSTGRES_PASSWORD=aura_password
POSTGRES_DB=aura_metrics

# Service Ports
COLLECTOR_PORT=9090
REMEDIATOR_PORT=9091
ML_SERVICE_PORT=8001
MCP_SERVER_PORT=8000
GRAFANA_PORT=3000

# Service URLs (for inter-service communication)
ML_SERVICE_URL=http://localhost:8001
MCP_SERVER_URL=http://localhost:8000

# Kubernetes Configuration
K8S_NAMESPACE=aura-system

# Collection Settings
COLLECTION_INTERVAL=15s
PREDICTION_INTERVAL=30

# ML Configuration
MODEL_PATH=./ml/train/models
CONFIDENCE_THRESHOLD=0.50

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Logging
LOG_LEVEL=info

# Schema Initialization
SKIP_SCHEMA_INIT=false

# Remediation Settings
MAX_REMEDIATION_RATE=10
RATE_LIMIT_BURST=5
