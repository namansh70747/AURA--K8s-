          "metricColumn": "none",
          "rawQuery": true,
          "rawSql": "SELECT\n  CASE\n    WHEN model_version IS NULL OR model_version = '' THEN 'Unknown'\n    WHEN LOWER(model_version) LIKE '%isolation%forest%' OR LOWER(model_version) LIKE '%isolation_forest%' THEN 'Isolation Forest'\n    WHEN LOWER(model_version) LIKE '%lof%' OR LOWER(model_version) LIKE '%local%outlier%' THEN 'Local Outlier Factor'\n    WHEN LOWER(model_version) LIKE '%autoencoder%' OR LOWER(model_version) LIKE '%auto_encoder%' THEN 'Autoencoder'\n    WHEN LOWER(model_version) LIKE '%lstm%' THEN 'LSTM'\n    WHEN LOWER(model_version) LIKE '%transformer%' THEN 'Transformer'\n    WHEN LOWER(model_version) LIKE '%prophet%' THEN 'Prophet'\n    WHEN LOWER(model_version) LIKE '%ensemble%' OR LOWER(model_version) LIKE '%combined%' THEN 'Ensemble'\n    WHEN LOWER(model_version) LIKE '%xgboost%' OR LOWER(model_version) LIKE '%xgb%' THEN 'XGBoost'\n    WHEN LOWER(model_version) LIKE '%random%forest%' OR LOWER(model_version) LIKE '%rf%' THEN 'Random Forest'\n    WHEN LOWER(model_version) LIKE '%gradient%boost%' OR LOWER(model_version) LIKE '%gb%' THEN 'Gradient Boosting'\n    WHEN LOWER(model_version) LIKE '%lightgbm%' OR LOWER(model_version) LIKE '%lgb%' THEN 'LightGBM'\n    ELSE COALESCE(model_version, 'Other')\n  END as model,\n  COUNT(*) as detections\nFROM ml_predictions\nWHERE $__timeFilter(timestamp)\n  AND is_anomaly = 1\n  AND namespace NOT IN ('kube-system', 'kube-public', 'kube-node-lease', 'local-path-storage', 'default')\nGROUP BY model\nORDER BY detections DESC",
